{% extends "base.html.twig" %}

{% block title %}Modification de la vente de {{car.brand}} {{car.model}} {{car.releaseYear}}{% endblock %}

{% form_theme myForm 'car/_collection.html.twig' %} 

{% block body %}
    <div class="container">
        <h1>Modification du produit : <strong>{{car.brand}} {{car.model}} {{car.releaseYear}}</strong></h1>

        {{form_start(myForm)}}
        
            {{form_widget(myForm)}}
            <button type="submit" class="btn btn-warning mt-3">Modifier</button>

        {{form_end(myForm)}}
    </div>
{% endblock %}

{% block javascripts %}
    {{encore_entry_script_tags('cars')}}
{% endblock %}