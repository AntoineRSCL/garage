{% extends "base.html.twig" %}

{% block title %}Modifier avatar{% endblock %}

{% block body %}
    <div class="container full formConnex">
        <h1>Modification de l'avatar de {{app.user.email}}</h1>
        {% if app.user.picture %}
            <img src="/uploads/{{app.user.picture}}" alt="Avatar de {{app.user.email}}"> 
        {% endif %}
        
        {{form_start(myForm)}}

            {{form_widget(myForm)}}
            <button type="submit" class="btn btn-outline-warning">Confirmez la modification de l'avatar</button> 
            <a class="btn btn-primary" href="{{path('account')}}">Retour</a>

        {{form_end(myForm)}}
    </div>
{% endblock %}